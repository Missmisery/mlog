{
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": true,
        "target": "es6",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "moduleResolution": "node",
        "module": "ES2020",
        "strictNullChecks": true,
        "paths": {
          "@/*": ["./src/*"]
        }
    },
    "exclude": ["node"],
    "include": [
      "src",
      "src/*/**.ts",
      "src/**.ts",
      "src/*/**.vue"
    ]
}